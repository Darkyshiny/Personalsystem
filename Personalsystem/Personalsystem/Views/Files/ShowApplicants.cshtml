@using Personalsystem


@{
    ViewBag.Title = "ShowApplicants";
}

<h2>ShowApplicants</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Surname")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Letter")
        </th>
        <th>
            @Html.DisplayName("CV")
        </th>
        <th>
            @Html.DisplayName("Send Mail")
        </th>
    </tr>

    @foreach (var item in ViewBag.appl)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.ActionLink("Cover Letter", "CoverLetter", new { id = item.Id })
            </td>
            <td>
                <div>
                    <button class="btn-sm btn-default" style="height:100%; border-radius: 7px; border-style: none;">
                        <span class=" glyphicon glyphicon-briefcase" style="font-size: 1em;">&nbsp</span>
                        @Html.ActionLink("Download CV", "DownloadCV", "Files", new { url = item.CVurl }, null)
                    </button>
                </div>
            </td>
            <td>
                <a href="mailto:" item.email
                   subject=MessageTitle&amp;
                   body=Message content>
                    Send Email
                    <span class="glyphicon glyphicon-envelope"></span>
                </a>


            </td>
        </tr>
    }

</table>


